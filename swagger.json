{
  "openapi": "3.0.0",
  "info": {
    "title": "API Biblioteca",
    "version": "1.0.0",
    "description": "API REST para gerenciamento de biblioteca."
  },
  "paths": {
    "/api/register": {
      "post": {
        "summary": "Cadastro de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário cadastrado" },
          "400": { "description": "Erro de validação" }
        }
      }
    },
    "/api/login": {
      "post": {
        "summary": "Login de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login realizado, retorna token JWT" },
          "401": { "description": "Usuário ou senha inválidos" }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "Consulta usuários cadastrados",
        "responses": {
          "200": {
            "description": "Lista de usuários cadastrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "username": { "type": "string" },
                      "password": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/books": {
      "get": {
        "summary": "Consulta livros disponíveis",
        "responses": {
          "200": { "description": "Lista de livros disponíveis" }
        }
      },
      "post": {
        "summary": "Cadastro de livro",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "author": { "type": "string" }
                },
                "required": ["title", "author"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Livro cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Livro cadastrado com sucesso" },
                    "book": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "title": { "type": "string" },
                        "author": { "type": "string" },
                        "available": { "type": "boolean" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Título e autor são obrigatórios" }
        }
      }
    },
    "/api/loans": {
      "post": {
        "summary": "Realizar empréstimo de livro",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "bookId": { "type": "integer" }
                },
                "required": ["bookId"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Empréstimo realizado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Empréstimo realizado" },
                    "book": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "title": { "type": "string" },
                        "author": { "type": "string" },
                        "available": { "type": "boolean" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Livro não disponível" },
          "401": { "description": "Token inválido" }
        }
      }
    },
    "/api/returns": {
      "post": {
        "summary": "Devolução de livro",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "loanId": { "type": "integer" }
                },
                "required": ["loanId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Livro devolvido com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Livro devolvido com sucesso" }
                  }
                }
              }
            }
          },
          "409": { "description": "Empréstimo não encontrado ou já devolvido" },
          "401": { "description": "Token inválido" }
        }
      }
    },
    "/api/myloans": {
      "get": {
        "summary": "Consultar meus empréstimos",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de empréstimos do usuário" },
          "401": { "description": "Token inválido" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
